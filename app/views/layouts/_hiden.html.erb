<style>
body {
  margin: 0;
  background-color: #f1f1f1;
  font-family: Arial, Helvetica, sans-serif;
}

#navbar {
  z-index: 100;
  background-color: #333;
  position: fixed;
  top: -50px;
  width: 100%;
  display:block;
  transition: top 0.3s;
  background: rgba(255, 255, 255, 0.95);
  padding-right: 100px;
}

#navbar a {
  float: right;
  display: block;
  color: black;
  text-align: center;
  padding: 15px;
  text-decoration: none;
  font-size: 17px;
}

#navbar a:hover {
  background-color: #ddd;
  color: black;
}
</style>
<div id="navbar">
    <%= link_to t("layouts.header.lienhe-menu"), lienhe_path %>
    <%= link_to t("layouts.header.tour"), tour_path %>
    <%= link_to t("layouts.header.gioithieu"), gioithieu_path %>
    <%= link_to t("layouts.header.trangchu"), root_path %>
</div>

<script>
var prevScrollpos = window.pageYOffset;
window.onscroll = function() {
var currentScrollPos = window.pageYOffset;
  if (prevScrollpos > currentScrollPos) {
    document.getElementById("navbar").style.top = "-50px";
  } else {
    document.getElementById("navbar").style.top = "0";
  }
  prevScrollpos = currentScrollPos;
}
</script>
